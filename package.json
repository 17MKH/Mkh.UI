    "ejs": "^3.1.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-vue": "^7.20.0",
    "html-minifier-terser": "^5.1.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-multi-input": "^1.2.0",
    "sass": "^1.43.3",
    "vite": "^2.7.13"
  },

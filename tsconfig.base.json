{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "declaration": false,
        "noImplicitAny": false,
        "lib": [
            "esnext",
            "dom"
        ],
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "package/*"
            ],
            "#/*": [
                "src/*"
            ]
        },
        "types": [
            "vite/client",
            "node"
        ]
    },
}